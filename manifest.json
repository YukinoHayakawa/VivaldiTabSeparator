{
    "description": "Open a tab separator",
    "manifest_version": 2,
    "name": "Tab Separator",
    "browser_action": {
        "default_icon": "icon.png"
    },
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": true
    },
    "version": "1.0",
    "commands": {
        "separator": {
            "suggested_key": {
                "default": "Alt+Shift+S"
            },
            "description": "Create tab separator."
        }
    }
}